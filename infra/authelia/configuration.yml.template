# Authelia Configuration
# Generated by setup.sh -- edit and re-run setup.sh to regenerate.
#
# Documentation: https://www.authelia.com/configuration/

---
server:
  address: "tcp://0.0.0.0:9091"

log:
  level: info

theme: dark

totp:
  issuer: ${DOMAIN}

authentication_backend:
  file:
    path: /config/users_database.yml
    password:
      algorithm: argon2id
      iterations: 3
      memory: 65536
      parallelism: 4
      salt_length: 16

access_control:
  default_policy: one_factor
  rules:
    # Ollama API -- no auth (used by local tools and MCP servers)
    - domain: "ollama.${DOMAIN}"
      policy: bypass

session:
  name: authelia_session
  domain: "${DOMAIN}"
  expiration: 12h
  inactivity: 1h
  remember_me: 1M

  redis:
    host: redis
    port: 6379

regulation:
  max_retries: 5
  find_time: 2m
  ban_time: 10m

storage:
  local:
    path: /config/db.sqlite3

notifier:
  filesystem:
    filename: /config/notification.txt
  # For email notifications, uncomment and configure:
  # smtp:
  #   host: smtp.example.com
  #   port: 587
  #   username: ${USER_EMAIL}
  #   sender: "Authelia <auth@${DOMAIN}>"
