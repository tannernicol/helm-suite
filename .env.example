# =============================================================================
# Helm Suite Configuration
# Copy this file to .env and fill in your values.
# =============================================================================

# -- Network ------------------------------------------------------------------
# Your domain name (wildcard DNS should point to TAILSCALE_IP)
DOMAIN=home.example.com

# Your machine's Tailscale IP (run: tailscale ip -4)
TAILSCALE_IP=100.x.x.x

# Local network subnet (for firewall rules)
LAN_SUBNET=192.168.1.0/24

# -- Hardware -----------------------------------------------------------------
# NAS IP address (local network)
NAS_IP=192.168.1.100

# Where the NAS is mounted on this machine
NAS_MOUNT=/mnt/nas

# Enable GPU support (requires NVIDIA drivers + nvidia-container-toolkit)
GPU_ENABLED=true

# -- User ---------------------------------------------------------------------
# Your username on this machine
USERNAME=user

# Email for Let's Encrypt and service accounts
USER_EMAIL=user@example.com

# Timezone (used by containers)
TIMEZONE=America/Los_Angeles

# -- Service Ports ------------------------------------------------------------
# Change these if you have conflicts. All bind to 127.0.0.1 only.
OLLAMA_PORT=11434
GITEA_HTTP_PORT=3030
GITEA_SSH_PORT=2222
IMMICH_PORT=2283
SEARXNG_PORT=8095
AUTHELIA_PORT=9091
GRAFANA_PORT=3100
PROMETHEUS_PORT=9090

# -- Ollama -------------------------------------------------------------------
# Comma-separated list of models to pull on setup
OLLAMA_MODELS=qwen2.5-coder:7b,qwen2.5:7b

# -- Immich -------------------------------------------------------------------
# Where uploaded photos are stored
IMMICH_UPLOAD_LOCATION=/srv/immich/upload

# Immich database credentials
IMMICH_DB_USERNAME=immich
IMMICH_DB_PASSWORD=CHANGE_ME_immich_db_password
IMMICH_DB_NAME=immich

# Immich database data directory
IMMICH_DB_DATA_LOCATION=/srv/immich/postgres

# -- Authelia -----------------------------------------------------------------
# JWT secret for Authelia sessions (generate: openssl rand -hex 32)
AUTHELIA_JWT_SECRET=CHANGE_ME_jwt_secret

# Session secret (generate: openssl rand -hex 32)
AUTHELIA_SESSION_SECRET=CHANGE_ME_session_secret

# Storage encryption key (generate: openssl rand -hex 32)
AUTHELIA_STORAGE_ENCRYPTION_KEY=CHANGE_ME_storage_key

# -- Grafana ------------------------------------------------------------------
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_grafana_password

# -- Notifications ------------------------------------------------------------
# ntfy.sh topic for push notifications (pick something unique)
NTFY_TOPIC=helm-suite-alerts

# -- Backup -------------------------------------------------------------------
# Where to store backups
BACKUP_DIR=/mnt/nas/Backups

# Backup schedule: daily, weekly, or a cron expression
BACKUP_SCHEDULE=daily

# -- TLS Certificates ---------------------------------------------------------
# Path to your TLS certificate and key (e.g., from Let's Encrypt or Caddy auto)
TLS_CERT_PATH=/etc/letsencrypt/live/${DOMAIN}/fullchain.pem
TLS_KEY_PATH=/etc/letsencrypt/live/${DOMAIN}/privkey.pem
