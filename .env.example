# Helm Suite â€” Environment Configuration
# Copy this file to .env and fill in your values.

# Domain for your services (must point to your Tailscale IP)
DOMAIN=example.com

# Tailscale IP of your host machine
TAILSCALE_IP=100.x.x.x

# Data directory (NAS mount or local path)
DATA_DIR=/srv/helm-suite

# Backup destination
BACKUP_DIR=/mnt/nas/Backups/helm-suite

# Authelia secrets (generate with: openssl rand -hex 32)
AUTHELIA_JWT_SECRET=change-me
AUTHELIA_SESSION_SECRET=change-me

# Immich database password
IMMICH_DB_PASSWORD=change-me

# Ollama host (usually localhost)
OLLAMA_HOST=http://127.0.0.1:11434
