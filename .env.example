# Helm Suite â€” Environment Configuration
# Copy this file to .env and fill in your values.

# Domain for your services (must point to your Tailscale IP)
DOMAIN=example.com

# Tailscale IP of your host machine (find with: tailscale ip -4)
TAILSCALE_IP=100.x.x.x

# Timezone
TZ=America/Los_Angeles

# Data directory (NAS mount or local path)
DATA_DIR=/srv/helm-suite

# Immich photo uploads directory
UPLOAD_LOCATION=/srv/helm-suite/photos

# Database credentials (used by Immich + pgvecto-rs)
DB_USERNAME=postgres
DB_PASSWORD=change-me
DB_DATABASE=immich

# Grafana admin password
GRAFANA_PASSWORD=change-me

# Authelia secrets (generate with: openssl rand -hex 32)
AUTHELIA_JWT_SECRET=change-me
AUTHELIA_SESSION_SECRET=change-me

# Backup directory (NAS mount or local path)
BACKUP_DIR=/mnt/nas/Backups/helm-suite

# Ollama host (usually localhost for bare-metal GPU access)
OLLAMA_HOST=http://127.0.0.1:11434
